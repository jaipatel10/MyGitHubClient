<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_homepage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:text="GitHub Client - Events"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lst_eventlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android1:layout_above="@+id/myframe"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_header"
        android:cacheColorHint="#00000000"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@android:color/transparent"
        android:longClickable="false"
        android:smoothScrollbar="true" >
    </ListView>

    <FrameLayout
        android1:id="@+id/myframe"
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:background="#FFFFFF" >

        <TextView
            android:id="@+id/txt_pagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android1:layout_gravity="center_vertical|center_horizontal|center"
            android:text="PageNum"
            android:textColor="#000000"
            android1:textSize="18sp"
            android1:textStyle="bold" />

        <ImageView
            android1:id="@+id/img_back"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="left|center_vertical"
            android1:src="@drawable/back" />

        <ImageView
            android1:id="@+id/img_next"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="right|center_vertical"
            android1:src="@drawable/next" />
    </FrameLayout>

</RelativeLayout>